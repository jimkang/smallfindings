---
permalink: rss.xml
metadata:
  title: Small Findings
  url: https://jimkang.com/smallfindings
  author:
    name: Jim Kang
    email: smallfindings@fastmail.com
  description: A roundup of small bits of information that I've collected, processed, and put away each week. Findings topics are often mundane (like pizza dough) or weird (like shark attacks in 1916).
  imageURL: https://jimkang.com/smallfindings/media/small-findings.jpg
  feed:
    filename: rss.xml
    path: rss.xml
    url: https://jimkang.com/smallfindings/rss.xml
    id: https://jimkang.com/smallfindings/
---
<?xml version="1.0" encoding="UTF-8"?><rss xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom="http://www.w3.org/2005/Atom" version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:anchor="https://anchor.fm/xmlns">
  <channel>
    <title><![CDATA[{{ metadata.title }}]]></title>
    <description><![CDATA[{{ metadata.description }}]]></description>
		<link>{{ metadata.url }}</link>
		<image>
			<url>{{ metadata.imageURL }}</url>
      <title>{{ metadata.title }}</title>
      <link>{{ metadata.url }}</link>
		</image>
		<generator>Smidgeo Podcasts</generator>
    <lastBuildDate>{{ collections.episodes | rssLastUpdatedDate }}</lastBuildDate>
		<atom:link href="{{ metadata.feed.url}}" rel="self" type="application/rss+xml"/>
		<author><![CDATA[{{ metadata.author.name }}]]></author>
		<copyright><![CDATA[{{ metadata.author.name }}]]></copyright>
		<language><![CDATA[en]]></language>
		<itunes:author>{{ metadata.author.name }}</itunes:author>
		<itunes:summary>{{ metadata.description }}</itunes:summary>
		<itunes:type>episodic</itunes:type>
		<itunes:owner>
			<itunes:name>{{ metadata.author.name }}</itunes:name>
			<itunes:email>{{ metadata.author.email }}</itunes:email>
		</itunes:owner>
		<itunes:explicit>No</itunes:explicit>
		<itunes:category text="Education">
      <itunes:category text="Self-Improvement"/>
		</itunes:category>
		<itunes:image href="{{ metadata.imageURL }}" />
    {%- for episode in collections.episodes -%}
      {%- set filename -%}smallfindings-{{ episode.data.number }}-{{ episode.data.slug }}.mp3{%- endset -%}
      {%- set fileURL -%}{{ metadata.url }}/episodes/{{ filename }}{%- endset -%}
      {%- set pageURL -%}{{ metadata.url }}/episodes/{{ episode.data.slug }}{%- endset -%}
      {%- set filePath -%}episodes/{{ filename }}{%- endset -%}
      {%- set imageURL -%}{{ metadata.url }}/media/{{ episode.data.imageFilename }}{%- endset -%}
      <item>
        <title><![CDATA[{{ episode.data.title }}]]></title>
        <description><![CDATA[{{ episode.data.summary }}]]></description>
        <link href="{{ pageURL }}"/>
        <guid isPermaLink="false">{{ fileURL }}</guid>
        <dc:creator><![CDATA[{{ metadata.author.name }}]]></dc:creator>
        <pubDate>{{ episode.data.date.toUTCString() }}</pubDate>
        <enclosure type="audio/mpeg" url="{{ fileURL }}" length="{{ filePath | length }}"/>
        <itunes:summary>{{ episode.data.summary }}</itunes:summary>
        <itunes:explicit>No</itunes:explicit>
        <itunes:duration>{{ episode.data.seconds }}</itunes:duration>
        <itunes:image href="{{ imageURL }}"/>
        <itunes:season>{{ episode.data.season }}</itunes:season>
        <itunes:episode>{{ episode.data.number }}</itunes:episode>
        <itunes:episodeType>full</itunes:episodeType>
      </item>
      {%- endfor -%}
	</channel>
</rss>
